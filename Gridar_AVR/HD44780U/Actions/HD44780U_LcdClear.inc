/*
* Данный макрос используется для очистки дисплея (каретка вернется в положение 1, 1)
*/
.macro HD44780U_LCD_Clear
	
	push r16						; вталкиваем r16 в STACK

	ldi	r16, 0x01					; записываем 1 в r16
	HD44780U_Send_instruction r16	; отсылаем инструкцию

	pop r16							; выталкиваем r16 из STACK

.endm
