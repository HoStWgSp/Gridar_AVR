/*
* Отсылает первоначальные инструкции дисплею при инициализации
*/
.macro HD44780U_instr
	_call HD44780U_instr_Act
.endm
//____________________________________________________________________________________
#ifdef HD44780U_8_Wires
	HD44780U_instr_act:
		cbi HD44780U_RS_PORT, HD44780U_RS_bit	; устанавливаем на инструкции
		HD44780U_Command
	ret
//____________________________________________________________________________________
//____________________________________________________________________________________
#elif HD44780U_4_Wires
	HD44780U_instr_act:
		cbi HD44780U_RS_PORT, HD44780U_RS_bit	;устанавливаем на инструкции
		HD44780U_Command1
	ret
#endif
