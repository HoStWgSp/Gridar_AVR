/*
* Останавливает модуль TWSI
*/
.macro TWSI_STOP
	_call TWSI_STOP_act
.endm
//____________________________________________________________________________________
//____________________________________________________________________________________
TWSI_STOP_act:											; метка
	push r16
	ldi		r16, (1<<TWINT) | (1<<TWSTO) | (1<<TWEN)	; формируем сигнал STOP
	WRITE_REG TWCR, r16									; отправляем по шине
	TWSI_Delay_4_1ms
	pop r16
ret	
